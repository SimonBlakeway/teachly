      }
      catch (err) {
      }
    }

    async function populateSpecialities(subjects) {
      async function appendSpec(subject) {
        res = await axios.get(`/get/validSpecialities/${subject}`)
        specArr = [];
        if (res.data) {
          specArr = res.data.sort((a, b) => { return a.localeCompare(b, userLang) })
        }
